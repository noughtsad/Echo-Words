<?php
session_start();
$message = "";

if ($_SERVER["REQUEST_METHOD"] == "POST") {
    $book_name = htmlspecialchars($_POST["book_name"]);
    $author_name = htmlspecialchars($_POST["author_name"]);
    $uploadDir = "uploads/";

    if (!file_exists($uploadDir)) {
        mkdir($uploadDir, 0777, true);
    }

    if (isset($_FILES["book_cover"]) && $_FILES["book_cover"]["error"] == 0) {
        $fileName = basename($_FILES["book_cover"]["name"]);
        $fileType = strtolower(pathinfo($fileName, PATHINFO_EXTENSION));
        $allowedTypes = ["jpg", "jpeg", "png"];

        if (in_array($fileType, $allowedTypes)) {
            $targetFilePath = $uploadDir . time() . "_" . $fileName;
            if (move_uploaded_file($_FILES["book_cover"]["tmp_name"], $targetFilePath)) {
                $message = "Book request submitted successfully!";
            } else {
                $message = "Error uploading book cover.";
            }
        } else {
            $message = "Invalid file type. Only JPG, JPEG, and PNG allowed.";
        }
    } else {
        $message = "Please upload a book cover.";
    }
}
?>
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
