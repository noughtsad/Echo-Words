<?php
session_start();
$message = "";

if ($_SERVER["REQUEST_METHOD"] == "POST") {
    $book_name = htmlspecialchars($_POST["book_name"]);
    $author_name = htmlspecialchars($_POST["author_name"]);
    $uploadDir = "uploads/";

    if (!file_exists($uploadDir)) {
        mkdir($uploadDir, 0777, true);
    }

    if (isset($_FILES["book_cover"]) && $_FILES["book_cover"]["error"] == 0) {
        $fileName = basename($_FILES["book_cover"]["name"]);
        $fileType = strtolower(pathinfo($fileName, PATHINFO_EXTENSION));
        $allowedTypes = ["jpg", "jpeg", "png"];

        if (in_array($fileType, $allowedTypes)) {
            $targetFilePath = $uploadDir . time() . "_" . $fileName;
            if (move_uploaded_file($_FILES["book_cover"]["tmp_name"], $targetFilePath)) {
                $message = "Book request submitted successfully!";
            } else {
                $message = "Error uploading book cover.";
            }
        } else {
            $message = "Invalid file type. Only JPG, JPEG, and PNG allowed.";
        }
    } else {
        $message = "Please upload a book cover.";
    }
}
?>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Request a Book - EchoWords</title>
    <link rel="stylesheet" href="styles.css">
    <style>
        body {
            font-family: 'Poppins', sans-serif;
            background: linear-gradient(to right, #1e3c72, #2a5298, #6e8efb, #a777e3);
            color: white;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            margin: 0;
        }
        .request-container {
            background: rgba(255, 255, 255, 0.2);
            padding: 40px;
            border-radius: 20px;
            box-shadow: 0px 4px 15px rgba(0, 0, 0, 0.3);
            text-align: center;
            width: 400px;
        }
        h2 { margin-bottom: 20px; }
        input, button {
            width: 100%;
            height: 50px;
            margin: 8px 0;
            border-radius: 10px;
            text-align: center;
        }
        button {
            background-color: #ffcc00;
            font-size: 18px;
        }
    </style>
</head>
<body>
    <div class="request-container">
        <h2>Request a Book</h2>
        <?php if ($message) echo "<p>$message</p>"; ?>
        <form action="" method="POST" enctype="multipart/form-data">
            <input type="text" name="book_name" placeholder="Book Name" required>
            <input type="text" name="author_name" placeholder="Author Name" required>
            <input type="file" name="book_cover" required>
            <button type="submit">Submit Request</button>
        </form>
    </div>
</body>
</html>
