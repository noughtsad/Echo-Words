            padding: 20px;
            border-radius: 10px;
            text-align: center;
            display: none;
        }
        .book-item {
            background: rgba(255, 255, 255, 0.2);
            padding: 10px;
            margin: 10px 0;
            border-radius: 10px;
            display: flex;
            align-items: center;
            justify-content: space-between;
        }
        .book-item img {
            width: 50px;
            height: auto;
            border-radius: 5px;
            margin-right: 15px;
        }
        .book-info {
            text-align: left;
            flex-grow: 1;
        }
    </style>
    <script>
        function showRequestedBooks() {
            document.getElementById("requestedBooks").style.display = "block";
        }
        function downloadAllBooks() {
            alert("Proceeding to download all requested books. Please follow the instructions in the next step.");
        }
    </script>
</head>
<body>
    <div class="request-container">
        <h2>Request a Book</h2>
        <?php if ($message) echo "<p>$message</p>"; ?>
        <form action="" method="POST" enctype="multipart/form-data">
            <input type="text" name="book_name" placeholder="Book Name" required>
            <input type="text" name="author_name" placeholder="Author Name" required>
            <input type="file" name="book_cover" required>
            <button type="submit">Submit Request</button>
        </form>
        <br>
        <a href="#" onclick="showRequestedBooks()" style="color: white; text-decoration: none;">View My Requested Books</a>
    </div>

    <div class="requested-books-container" id="requestedBooks">
