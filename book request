            box-shadow: 0px 4px 15px rgba(0, 0, 0, 0.3);
            text-align: center;
            width: 400px;
        }
        h2 { margin-bottom: 20px; }
        input, button {
            width: 100%;
            height: 50px;
            margin: 8px 0;
            border-radius: 10px;
            text-align: center;
        }
        input {
            border: none;
            padding: 10px;
            font-size: 16px;
            background: rgba(255, 255, 255, 0.9);
            color: black;
        }
